<div class= "container">
  <div class="row justify-content-center mt-5">
    <div class= "h1">
      <h1>詳細</h1>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-4 offset-1" style="border-radius: 10px; overflow: hidden;">
      <% if @dog_event.image.attached? %>
        <%= image_tag @dog_event.image, size: "400x250", style: "border-radius: 10px;" %>
      <% else %>
        <%= image_tag 'no_image', size: "300x250", style: "border-radius: 10px;" %>
      <% end %>
    </div>
    <div class="col-4 offset-1">
      <div class="card" style="border-radius: 15px;">
        <div class="card-body">
          <h5 class="card-title text-center" style="border-bottom: 2px dotted #ff69b4;"><%= @dog_event.title %></h5>
          <p class="card-text text-center" style="margin-bottom: 30px;"><%= @dog_event.content %></p>
          <p class="card-text text-center" ><strong>住所：</strong><%= @dog_event.address %></p>
          <p class="card-text text-center"><strong>料金：</strong><%= @dog_event.price %></p>
        </div>
      </div>
    </div>
    <div class= "container">
      <div class="row justify-content-center mt-3">
        <div class="text-center mt-3">
           <a href="<%= public_dog_events_path %>" class="btn btn-success"  style="background-color: #663300; border-color: #663300;">一覧に戻る</a>
        </div>
      </div>
    </div>
  </div>
</div>
<div class= "container">
  <hr style="border-top: 1px solid #ccc; margin: 30px 0;">
</div>
<div class="container">
    <div class="row">
     <div class="col-6">
       <h4 class="comment"><strong>コメント一覧</strong></h4>
        <% @dog_event.comments.each do |comment| %>
          <div class="card">
            <div class="card-body">
              <div class="d-flex justify-content-between">
                <div>
                  <%= comment.user.name %>
                  <small class="text-muted"><%= comment.created_at.strftime('%Y/%m/%d') %></small>
                </div>
                <% if comment.user == current_user %>
                  <%= link_to "削除", review_comment_path(@dog_event, comment), method: :delete, class: "btn btn-sm btn-danger", data: { confirm: "本当に削除しますか？" } %>
                <% end %>
              </div>
              <p class="card-text"><%= comment.content %></p>
            </div>
          </div>
        <% end %>
      </div>
       <div class="col-5">
        <%= form_with model: [@dog_event, @comment], url: review_comments_path(@dog_event, review_type: "dog_event") do |f| %>
            <div class="form-group mr-2">
              <%= f.text_area :content, rows: '5', placeholder: "コメントをここに", class: "form-control" %>
            </div>
            <div class="form-group text-right">
              <%= f.submit "送信する", class: "btn btn-primary" %>
            </div>
        <% end %>
      </div>
    </div>
</div>