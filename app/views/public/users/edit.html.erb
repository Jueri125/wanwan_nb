<div class="container">
  <div class="row justify-content-center mt-5">
      <div class= "h1">
        <h1>マイページ編集</h1>
      </div>
   </div>
</div>

    <%= form_with model: @user, url: user_path(@user), method: :patch do |f| %>
<div class="container">
      <div class="row justify-content-center">
         <div class="field text-center">
          <%= f.label :"画像"%><br />
　　　　　<%= f.file_field :image, accept: "image/*" %>
         </div>
      </div>
      <div class="row justify-content-center">
         <div class="field text-center">
          <%= f.label :"氏名"%><br />
          <%= f.text_field :name %>
         </div>
      </div>
      <div class="justify-content-center">
         <div class="field text-center">
          <%= f.label :"フリガナ"%><br />
          <%= f.text_field :name_kana %>
         </div>
      </div>
      <div class="justify-content-center">
         <div class="field text-center">
          <%= f.label :"メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
         </div>
      </div>
      <div class="justify-content-center">
         <div class="field text-center">
          <%= f.label :"自己紹介" %><br />
          <%= f.text_area  :introduction %>
         </div>
      </div>
</div>
      <div class="row mt-5">
          <div class="col-3 offset-4">
           <%= f.submit '編集内容を保存', style: 'background-color: limegreen; color: white;', class: "btn btn-lg custom-button"%>
          </div>
          <div class="col-3">
            <%= link_to '退会する', user_check_path, style: 'background-color: #3399FF	; color: white;', class: "btn btn-lg custom-button" %>
          </div>
      </div>
<% end %>