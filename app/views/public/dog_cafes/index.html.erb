<div class= "container">
   <div class="row justify-content-center mt-5">
     <div class= "h1">
       <h1>ドックカフェ一覧</h1>
     </div>
   </div>
   <div class="container offset-1">
     <div class="row">
        <% @reviews.where(review_type: :dog_cafe).each do |review| %>
          <div class="col-md-3">
            <div class="border p-3">
              <%= link_to public_dog_cafe_path(review.id) do %>
                <% if review.image.attached? %>
                  <%= image_tag review.image, size: "200x150" %>
                <% else %>
                  <%= image_tag 'no_image', size: "200x150" %>
                <% end %>
              <% end %>
                <br>
              <strong>店舗名</strong>
                <%= review.title %><br>
              <strong>住所</strong>
                <%= review.address %><br>
            </div>
          </div>
        <% end %>
     </div>
   </div>
</div>