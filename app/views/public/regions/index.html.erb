<div class="container">
    <div class="container offset-1 mt-5">
     <div class="row">
         <% @prefectures_by_region.each do |region_id, prefectures| %>
      <div class="col-3 mt-3">

        <div class="border p-3">
            <h2><%= Region.find(region_id).name %></h2>
            <% prefectures.each_slice(2) do |prefectures_slice| %>
              <div class="row">
                <% prefectures_slice.each do |prefecture| %>
                  <div class="col-md-6">
                    <%= link_to prefecture.name, public_region_path(prefecture) %>
                  </div>
                <% end %>
              </div>
            <% end %>
        </div>
       </div>
         <% end %>
     </div>
    </div>
</div>