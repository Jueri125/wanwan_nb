<div class= "container">
  <div class="row justify-content-center mt-5">
    <div class= "h1">
    <%= @prefecture.name %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @reviews.each do |review| %>
     <div class="col-md-3">
       <div class="border p-3">
          <strong><%= review.review_type_i18n %></strong>
          <%= link_to review_path(review) do %>
           <% if review.image.attached? %>
             <%= image_tag review.image, size: "200x150" %>
           <% else %>
             <%= image_tag 'no_image', size: "200x150" %>
           <% end %>
          <% end %>
           <br>
         <%= review.title%></br>
          <% if review.review_type == 'dog_run' || review.review_type == 'dog_event' %>
            <strong>料金：<%= review.price %></strong>
          <% else %>
            <strong style="visibility: hidden;">料金：</strong>
          <% end %>
       </div>
     </div>
    <% end %>
 </div>
</div>
<div class= "container">
  <div class="row justify-content-center mt-5">
    <%= link_to "戻る", public_regions_path, class: "btn btn-secondary" %>
  </div>
</div>