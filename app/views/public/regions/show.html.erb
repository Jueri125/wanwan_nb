<div class= "container">
  <div class="row justify-content-center mt-5">
    <div class= "h1">
    <%= @prefecture.name %>
    </div>
  </div>
</div>

<div class="container">
 <div class="row justify-content-center mt-5">
     <table style="width: 50%;">
       <thead class="thead" style="background-color: #EEE8AA;">
        <th style="width: 20%">タイプ</th>
        <th style="width: 30%">名前</th>
        <th style="width: 20%">価格</th>
       </thead>
       <tbody>
         <% @reviews.each do |review| %>
            <tr>
              <td style="width: 10%"><%= review.review_type %></td>
              <td style="width: 30%" ><%= link_to review.title, admin_review_path(review.id) %></td>
              <td style="width: 10%"><%= review.price %></td>
            </tr>
         <% end %>
      </tbody>
     </table>
    </div>
</div>
<div class= "container">
  <div class="row justify-content-center mt-5">
    <%= link_to "戻る", public_regions_path, class: "btn btn-secondary" %>
  </div>
</div>